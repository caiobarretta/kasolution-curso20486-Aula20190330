
<h2>Adicionar/Editar Produto</h2>

<form method="post">
	<div class="form-group">
		<label>Nome </label>
		<input type="text" class="form-control" name="nome" value="@Model?.Nome" autofocus required />
	</div>

	<div class="form-group">
		<label>Preço </label>
		<input type="text" class="form-control" name="preco" value="@Model?.Preco" required />
	</div>

	<div class="form-group">
		<label>Tipo </label>
		<input type="text" class="form-control" name="tipo" value="@Model?.Tipo" required />
	</div>

	<div>
		<button class="btn btn-outline-success" type="submit">Salvar</button>
		<a class="btn btn-outline-info" href="~/Produtos">Cancelar</a>
	</div>

</form>

